                </div>
            </nav>

            <div class="main-content container-fluid">
                <div class="page-title">
                    <div class="row">
                        <div class="col-12 col-md-6 order-md-1 order-last">
                        </div>
                    </div>
                </div>
                <section class="section">
                    <div class="card">
                        <div class="card-header">
                            <h4>Nạp tiền sinh viên</h4>
                        </div>
                        <div class="card-body">
                          <div>
                            <form action="/user/naptienuser" method="POST">
                              <div class="modal-body row">
                                <% for(let i=0; i < User.length; i++) {%>
                                  <% let num = User[i].soDu %>
                                  <% let chuoi = num.toString() %>
                                <% const format = chuoi.replace(/\B(?=(\d{3})+(?!\d))/g, ',') %>
                                  <p name="mssv" style="font-weight:bold;">MSSV :
                                     <span><input style="border:0; font-weight:bold; color: #727E8C;" readonly name="mssv" value="<%=User[i].mssv %>"></span></p>
                                  <p style="font-weight:bold;">Văn Lang Mail : 
                                    <span><input style="border:0;width:300px; font-weight:bold; color: #727E8C;" readonly name="email" value="<%=User[i].email %>"></span></p>
                                  <p style="font-weight:bold">Tên Sinh Viên : 
                                    <span><input style="border:0; font-weight:bold; color: #727E8C;" readonly name="tenSV" value="<%=User[i].tenSV %>"></span></p>
                                  <p style="font-weight:bold">Số Tiền Hiện Có : 
                                    <span><input style="border:0; font-weight:bold; color: #727E8C;" readonly value="<%=format+' VNĐ'%>">
                                      <input style="border:0; font-weight:bold; color: #727E8C;" readonly hidden name="soDu" value="<%=User[i].soDu %>"></span></p>
                                  <p style="font-weight:bold">Số tiền nạp :
                                    <span><input type="text" name="money"
                                        style="width:100px; height: 30px ;border-color:antiquewhite; border-radius:5px;"></span> VNĐ
                                  </p>
                                  <% } %>
                              </div>
                              <div class="modal-footer">
                                <a href="/user/listuser" class="btn btn-default" data-dismiss="modal">Hủy</a>
                                <button type="submit" class="btn btn-primary" id="add-user-btn">Nạp</button>
                              </div>
                            </form>
                          </div>
                        </div>
                        </div>
                    </div>

                </section>
            </div>
            <footer>
                <div class="footer clearfix mb-0 text-muted">
                  <div class="float-left">
                    <p>2022 &copy; SEP team 10</p>
                  </div>
                </div>
              </footer>
        </div>
    </div>
